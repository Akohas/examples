mixin set(PhotoName, userpic, author, setName, date)
	a(href="#").set-block__item.set-js
		.set-block__self-container
			img(src=PhotoName).set-block__img
			.set-block__gradient
			.set-block__info
				.set-block__date=date
				.set-block__set-name=setName
				object
					a(href="#").set-block__author 
						img(src=userpic)
						span=author
